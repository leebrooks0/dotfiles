\set QUIET ON

-- table frame border
\pset border 2

-- Use a 2-column layout when query output is wider than screen width
\pset expanded auto

-- Default display for null values is nothing...
\pset null '(null)'

-- Don't page queries
\pset pager off

-- Show how long each SQL statment takes
\timing on

-- maintain a separate history file for each database
\set HISTFILE ~/.psql_history- :DBNAME

-- Don't save duplicate lines in the history
\set HISTCONTROL ignoredups

\set QUIET OFF

-- Display some useful shortcuts
\echo '\\l - List all databases'
\echo '\\dtv - List all tables and views'
\echo '\\dt - List all tables'
\echo '\\dv - List all views'
\echo '\\d [NAME] - Describe index, table, sequence or view'
\echo '\\df - List all functions'
\echo '\\du - List all roles'
